                        d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                </svg></a>
        <h2>Admin Panel</h2>
        <div class="row col-md-10 mt-4 ">
            <br>
             <form action="/admin/submit" method="post">
                 Sort Complaints<br> 
          <select  name="department" class="form-select  mb-3" style="width: 30rem;">
            <option selected>show all</option>
            <option>Arabic</option>
            <option>English</option>
            <option>Malayalam</option>
            <option>History</option>
            <option>Lib.I.Sc</option>
            <option>Sociology</option>
            <option>Economics</option>
            <option>Psychology</option>
            <option>Zoology</option>
            <option>Computer Science</option>
            <option>Chemistry</option>
            <option>Botony</option>
            <option>Physics</option>
            <option>Mathematics</option>
            <option>Statistics</option>
            <option>Commerce & Management studies</option>
            <option>Multimedia</option>
            <option>Geology</option>
            <option>Journalism & Mass Communication</option>
            <option>Vocational Studies</option>
            
          </select> <button type="submit" class="btn btn-outline-primary">View</button>
             </form>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Subject</th>
                        <th scope="col">Details</th>
                        <th scope="col">Respond</th>
                        <th scope="col">Status</th>

                    </tr>
                </thead>
                <tbody>
                    {{#each complaints}}
                    <tr>
                        <td>{{this.subject}}</td>
                        <td>{{this.complaint}}
                        </td>
                        <td>
                            <form action="/admin/send?id={{this._id}}" method="post">
                                <textarea class="form-control" id="floatingTextarea2" name="response"
                                    style="height: 60px;width:200px"></textarea>
                                <button type="submit" class="btn btn-primary">Send</button>
                            </form>
                        </td>
                        <td>
                            {{#if this.response}}
                            <p class="text-success">Responded</p>
                            {{/if}}
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>